              },
              "fullDescription": {
                "text": "Type: Kubernetes Deployment, impact: Compromised process could abuse writable root filesystem to elevate privileges"
              },
              "help": {
                "text": "Set `securityContext.readOnlyRootFilesystem` to `true`"
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": [
                  "security",
                  "k8s/Deployment"
                ]
              }
            },
