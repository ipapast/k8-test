              },
              "help": {
                "text": "Set `imagePullPolicy` attribute to `Always`"
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": [
                  "security",
                  "k8s/Deployment"
                ]
              }
            }
          ]
