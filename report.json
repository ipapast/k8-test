              },
              "fullDescription": {
                "text": "Type: Kubernetes Deployment, impact: Containers are running with potentially unnecessary privileges"
              },
              "help": {
                "text": "Add `ALL` to `securityContext.capabilities.drop` list"
              },
              "defaultConfiguration": {
                "level": "warning"
              },
              "properties": {
                "tags": [
                  "security",
                  "k8s/Deployment"
                ]
              }
